<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel's Admin</title>
    <link rel="stylesheet" href="css/admin.css"> 
    <script src="js/admin.js" defer></script>
</head>
<body>
    <header><h1>Express Travels</h1></header>
    <main>
        <section id="insert">
            <h2>A√±adir datos</h2>
            <form action="/insert" method="POST">
                <div>
                    <label for="ruta">Ruta :</label>
                    <input type="text" id="ruta" name="ruta">
                </div>
                <div>
                    <label for="lugar">Lugar :</label>
                    <input type="text" id="lugar" name="lugar">
                </div>
                <div>
                    <label for="nombre">Nombre :</label>
                    <input type="text" id="nombre" name="nombre">
                </div>
                <div>
                    <label for="descripcion">Descripci√≥n :</label>
                    <input type="text" id="descripcion" name="descripcion">
                </div>
                <div>
                    <label for="precio">Precio :</label>
                    <input type="text" id="precio" name="precio">
                </div>
                <div>
                    <label for="img">Ruta de la imagen :</label>
                    <input type="text" id="img" name="img">
                </div>
                <div id="buttons">
                    <button type="submit">Aceptar</button>
                    <button type="reset">Borrar</button>
                </div>
            </form>
        </section>
        <section id="update">
            <h2>Modificar datos</h2>
            <form name = "update">
                <input type="hidden" name="id">
                <div>
                    <label for="ruta">Ruta :</label>
                    <input type="text" id="ruta" name="ruta">
                </div>
                <div>
                    <label for="lugar">Lugar :</label>
                    <input type="text" id="lugar" name="lugar">
                </div>
                <div>
                    <label for="nombre">Nombre :</label>
                    <input type="text" id="nombre" name="nombre">
                </div>
                <div>
                    <label for="descripcion">Descripci√≥n :</label>
                    <input type="text" id="descripcion" name="descripcion">
                </div>
                <div>
                    <label for="precio">Precio :</label>
                    <input type="text" id="precio" name="precio">
                </div>
                <div>
                    <label for="img">Ruta de la imagen :</label>
                    <input type="text" id="img" name="img">
                </div>
                <div id="buttons">
                    <button type="submit">Aceptar</button>
                    <button type="reset">Borrar</button>
                </div>
            </form>
        </section>
        <section>
            <table>
                <tr>
                    <th>Ruta</th>
                    <th>Lugar</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th></th>
                    <th></th>
                </tr>
                <% jsonData.forEach(travel => { %>
                    <tr>
                        <td><a href="<%= travel.ruta %>"><%= travel.ruta %></a></td>
                        <td><%= travel.lugar %></td>
                        <td><%= travel.nombre %></td>
                        <td><%= travel.precio %></td>
                        <td><button tittle="Editar viaje" onclick="editTravel(`<%= JSON.stringify(travel) %>`)">üñä</button></td>
                        <td><button tittle="Borrar viaje" onclick="deleteTravel(`<%= travel.id %>`)">‚ùå</button></td>
                    </tr>
                <% }) %> 
            </table>
        </section>
    </main>
</body>
</html>